
@model MvcApplicationPBI.Models.PBIReports
@{
    Layout = "~/Views/Shared/_MyHome.cshtml";
}


<header class="header">
    <div class="user-avatar">
        <img src="http://lh3.googleusercontent.com/-IFrmlRCjB6s/AAAAAAAAAAI/AAAAAAAAHU4/-j7bGLp4w88/s120-c/photo.jpg"/>
    </div>
    <h4 class="user-name">>@ViewBag.user</h4>
</header>
<div class="container">
 <div class="left">
  <ul id="accordion">
    <li>
        <div>Reports</div>
        <ul class="report-list">
            
            @foreach (var item in @Model.value)
            {
                <li>@Ajax.ActionLink(item.name,"GetIframe", new { embedurl=item.embedUrl },
            new AjaxOptions{ UpdateTargetId="divTarget", InsertionMode= InsertionMode.Replace})</li>
            }
        </ul>
    </li>
    <li>   
     <div>Technology</div>
        <ul>
            <li><a href="#">iPhone</a></li>
            <li><a href="#">Facebook</a></li>
            <li><a href="#">Twitter</a></li>
        </ul>
    </li>
    <li><div>Latest</div>
        <ul>
            <li><a href="#">Obama</a></li>
            <li><a href="#">Iran Election</a></li>
            <li><a href="#">Health Care</a></li>
        </ul>
    </li>
</ul>
     </div>
     <div id="divTarget" class="right">
    </div>
</div>

<script type="text/javascript" src="http://code.jquery.com/jquery-latest.js"></script>


<script type="text/javascript">
    
    $(document).ready(function () {
        $("#accordion > li > div").click(function () {

            if (false == $(this).next().is(':visible')) {
                $('#accordion ul').slideUp(300);
            }
            $(this).next().slideToggle(300);
        });

        $('#accordion ul:eq(0)').show();

    });
</script>